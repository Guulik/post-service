type Comment{
    id: ID!
    createdAt: Time!
    content: String!
    post: ID!
    replyTo: ID
}

input InputComment{
    content: String!
    post: ID!
    replyTo: ID
}

extend type Query{
    GetReplies(commentId: ID!, depth: Int!): [Comment!]
}

extend type Mutation {
    CreateComment(input: InputComment!): Comment!
}

type Subscription{
    CommentsSubscription(postId:ID!):Comment!
}